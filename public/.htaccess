<IfModule mod_rewrite.c>
    # Disable directory listing and MultiViews (ensures that URL matching works as intended)
    <IfModule mod_negotiation.c>
        Options -MultiViews -Indexes
    </IfModule>

    # Enable the rewrite engine
    RewriteEngine On

    # Handle Authorization Header (for cases where Authorization headers are needed)
    RewriteCond %{HTTP:Authorization} .
    RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]

    # Redirect Trailing Slashes If Not A Folder (helps with SEO and canonical URLs)
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} (.+)/$
    RewriteRule ^ %1 [L,R=301]

    # Prevent access to certain file types (prevents access to sensitive files)
    RewriteRule ^(.*/)?\.env - [F,L]
    RewriteRule ^(.*/)?\.git - [F,L]
    RewriteRule ^(.*/)?\.env.* - [F,L]

    # Send Requests To Front Controller (Laravel routes all requests through index.php)
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^ index.php [L]
</IfModule>
